/* pages/home/index.wxss */
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  padding: 15rpx;
  box-sizing: border-box;
}

/* 跑马灯样式 */
.marquee-container {
  display: flex;
  align-items: center;
  height: 60rpx;
  padding: 0 20rpx;
  background-color: #f5f5f5;
  border-radius: 30rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
}

.marquee-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 15rpx;
  flex-shrink: 0;
}

.marquee-wrapper {
  flex: 1;
  display: flex;
  position: relative;
  height: 100%;
  overflow: hidden;
}

.marquee-content {
  position: absolute;
  white-space: nowrap;
  line-height: 60rpx;
  font-size: 28rpx;
  color: #666;
  padding-right: 40rpx;
}

/* 搜索框 */
.search-container {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background-color: #f5f5f5;
  border-radius: 50rpx;
  margin-bottom: 20rpx;
}

.search-icon {
  margin-right: 10rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
}

/* 分类标签 */
.category-tabs {
  display: flex;
  white-space: nowrap;
  overflow-x: auto;
  margin-bottom: 20rpx;
  padding-bottom: 10rpx;
}

.category-tab {
  padding: 15rpx 30rpx;
  margin-right: 20rpx;
  background-color: #f5f5f5;
  border-radius: 30rpx;
  font-size: 28rpx;
}

.category-tab.active {
  background-color: #07C160;
  color: white;
}

/* 工具列表 */
.tool-scroll {
  flex: 1;
  height: 100%;
}

.tool-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 30rpx;
  padding: 20rpx;
}

.tool-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 10rpx 20rpx;
  background-color: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  position: relative;
  overflow: hidden;
}

.tool-logo-container {
  width: 180rpx;
  height: 180rpx;
  border-radius: 24rpx;
  background-color: rgba(255, 255, 255, 0.7);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.12);
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  margin-bottom: 20rpx;
}

.tool-logo {
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
  object-fit: contain;
  padding: 0rpx;
  box-sizing: border-box;
}

.tool-icon {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  bottom: 10rpx;
  right: 10rpx;
  background-color: rgb(241, 135, 13);
  border-radius: 50%;
  padding: 6rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  z-index: 2;
  border: 2rpx solid white;
}

.tool-name {
  font-size: 30rpx;
  color: #333;
  text-align: center;
  font-weight: 500;
  margin-top: 10rpx;
  width: 100%;
  white-space: normal;
  word-wrap: break-word;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
  line-height: 1.4;
  max-height: 84rpx;
}

/* 广告位 */
.ad-container {
  margin-top: 20rpx;
  padding: 20rpx 0;
}

/* 悬浮按钮 */
.floating-tool-btn {
  position: fixed;
  right: 30rpx;
  bottom: 120rpx;
  width: 100rpx;
  height: 100rpx;
  background: #07C160;
  border-radius: 50%;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.2);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 999;
  transition: all 0.3s;
}

.floating-tool-btn image {
  width: 60rpx;
  height: 60rpx;
}

.floating-tool-btn:active {
  transform: scale(0.95);
  opacity: 0.8;
}