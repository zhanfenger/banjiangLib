/* ad-banner/index.wxss */
.ad-banner {
  width: 100%;
  height: 100px;
  background-color: #f0f0f0;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 8px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.ad-banner .banner-text {
  font-size: 16px;
  color: #333;
  text-align: center;
}

.ad-banner .banner-image {
  width: 80px;
  height: 80px;
  margin-right: 10px;
}

.ad-banner .banner-button {
  background-color: #007bff;
  color: #fff;
  padding: 8px 16px;
  border-radius: 4px;
  font-size: 14px;
  margin-top: 10px;
}