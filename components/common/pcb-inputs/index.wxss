/* pcb-inputs/index.wxss */
.pcb-inputs {
  width: 100%;
  padding: 16px;
  background-color: #fff;
  border-radius: 8px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.pcb-inputs .input-group {
  margin-bottom: 16px;
}

.pcb-inputs .input-label {
  font-size: 14px;
  color: #666;
  margin-bottom: 8px;
}

.pcb-inputs .input-field {
  width: 100%;
  height: 40px;
  padding: 8px;
  border: 1px solid #ddd;
  border-radius: 4px;
  font-size: 14px;
}

.pcb-inputs .input-field:focus {
  border-color: #007bff;
  outline: none;
}

.pcb-inputs .input-picker {
  width: 100%;
  height: 40px;
  padding: 8px;
  border: 1px solid #ddd;
  border-radius: 4px;
  font-size: 14px;
  background-color: #fff;
}